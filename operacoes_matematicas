#include<stdio.h>
#include<stdlib.h>

void main(){
    
    int a=6, b=2;
    
    //soma
    printf("\n A soma de %d e %d = %d", a, b, a+b);
    
    //subtração
    printf("\n A subtração de %d e %d = %d", a, b, a-b);
    
    //divisão
    printf("\n A divisão de %d e %d = %d", a, b, a/b);
    
    //multiplicação
    printf("\n A multiplicação de %d e %d = %d", a, b, a*b);
    
    //resto da divisão
    printf("\n A resto da divisão de %d e %d = %d", a, b, a%b);
    
    //valor absoluto
    printf("\n O valor absoluto de -3 é: = %d", abs(-3));
    
    printf("\n\nfim...");
    //pausa o programa após executar
    system("pause");
}
